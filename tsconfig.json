{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "commonjs",
    "target": "ES2021", // Node.js LTS 16
    "lib": ["ES2021"], // Node.js LTS 16
    "jsx": "react-native",
    "allowJs": true,
    "removeComments": true,
    "noEmit": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "useUnknownInCatchVariables": false,
    "types": ["react-native"],
    "skipLibCheck": true
  },
  "include": ["src"]
}
